@using HairSalon.Models;

<h1>Specialty List</h1>
<ul>
@if(Model.Count ==0)
{
    <p>You have no specialties in your list</p>
}
@if(Model.Count !=0 )
{
    @foreach(Specialty specialty in Model)
    {
        <li><a href="/specialties/@specialty.GetId()">@specialty.GetDescription()</a></li>
    }
}

</ul>
<a href="/specialties/new">Add a new Specialty</a>
<h4><a href="/">Return Home</a></h4>
